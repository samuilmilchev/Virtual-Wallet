@{
    var isAuthenticated = User.Identity.IsAuthenticated;
    var walletName = ViewBag.WalletName;
    var walletBalance = ViewBag.WalletBalance;
}

<!-- about section -->

<section class="about_section layout_padding">
    <br><br>
    <div class="container  ">
        <div class="heading_container heading_center">
            <h2>
                About <span style="color: #7db9f8;">Us</span>
            </h2>
            <p style="font-size:22px">
                Welcome to Nimble, your trusted virtual wallet.
            </p>
        </div>
        <div style="margin-left: 20px;" class="row">
            <div class="col-md-6 ">
                <div class="img-box">
                    <img src="~/images/about.png" alt="">
                </div>
            </div>
            <div class="col-md-6">
                <div class="detail-box">
                    <h3>
                        We Are NIMBLE
                    </h3>
                    <p style="font-size:20px">
                        Founded in 2024 by three entrepreneurs in Bulgaria, Nimble was created to simplify your financial management in a digital world.
                    </p>
                    <p style="font-size:20px">
                        We prioritize security, convenience, and innovation, making Nimble more than just a transaction tool—it's your seamless financial companion. Whether you're sending money, shopping online, or managing savings, Nimble makes your financial journey smoother.
                    </p>
                    <p style="font-size:20px">
                        As a proud Bulgarian company, we're dedicated to supporting our local tech community and exceeding our users' expectations. Thank you for choosing Nimble as your financial partner.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- info section -->

<section class="info_section layout_padding2">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-lg-3 info_col">
                <div class="info_contact">
                    <h4>
                        Address:
                        <hr>
                    </h4>
                    <div class="contact_link_box">
                        <a href="">
                            <span style="font-size:20px;">
                                Sofia
                            </span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 info_col">
                <div class="info_detail">
                    <h4>
                        Info:
                        <hr>
                    </h4>
                    <p>
                        We will answer your questions. <br>Write an email at: <strong>nimble.noreply@abv.bg</strong>
                    </p>
                </div>
            </div>
            <div class="col-md-6 col-lg-2 mx-auto info_col">
                <div class="info_link_box">
                    <h4>
                        Links:
                        <hr>
                    </h4>
                    <div class="info_links">
                        <a class="active" asp-controller="Home" asp-action="Index">
                            Home
                        </a>
                        <a class="" asp-controller="Home" asp-action="About">
                            About
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- end info section -->
<!-- footer section -->
<section class="footer_section">
    <div class="container">
        <p>
            <span id="displayYear"></span>
        </p>
    </div>
</section>
