<div class="form-container">
    <form asp-action="ConvertFunds" method="post" enctype="multipart/form-data">
        <div class="form-title">
            <h2>Convert currency</h2>
            <hr>
        </div>

        <!-- Dropdown for selecting currency -->
        <div class="form-group">
            <label asp-for="FromCurrency" style="font-size: 20px;">From Currency</label>
            <select asp-for="FromCurrency" class="form-control" asp-items="@(Html.GetEnumSelectList<Currency>())">
                <option value="">Select Currency</option> <!-- Optional placeholder -->
            </select>
            <span asp-validation-for="FromCurrency" class="text-danger"></span>
        </div>

        <!-- Input for End Date -->
        <div class="form-group">
            <label asp-for="ToCurrency" style="font-size: 20px;">To Currency</label>
            <select asp-for="ToCurrency" class="form-control" asp-items="@(Html.GetEnumSelectList<Currency>())">
                <option value="">Select Currency</option> <!-- Optional placeholder -->
            </select>
            <span asp-validation-for="ToCurrency" class="text-danger"></span>
        </div>

        <!-- Input for Amount -->
        <div class="form-group">
            <label asp-for="Amount" style="font-size: 20px;" class="form-label"></label>
            <input asp-for="Amount" style="color:black;" class="input-field" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn-submit">Convert</button>
    </form>
    <br>
    <br>
</div>
