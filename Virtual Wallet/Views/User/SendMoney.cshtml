<div class="form-container">
    <form asp-action="SendMoney" method="post" enctype="multipart/form-data">
        <div class="form-title">
            <h2>Send Money</h2>
            <hr>
        </div>

        <div class="form-group">
            <label asp-for="RecipienTokens" style="color:black;" class="form-label">Recepien</label>
            <input asp-for="RecipienTokens" class="input-field" placeholder="Username/ PhoneNumber/ Email" />
            <span asp-validation-for="RecipienTokens"></span>
        </div>

        <div class="form-group">
            <label asp-for="Currency" style="color:black;" class="form-label">Select Currency</label>
            <select asp-for="Currency" class="form-control">
                @foreach (var wallet in Model.CurrentUser.UserWallets)
                {
                    <option value="@wallet.Currency">@wallet.Currency</option>
                }
            </select>
            <span asp-validation-for="Currency"></span>
        </div>

        <div class="form-group">
            <label asp-for="Amount" style="color:black;" class="form-label"></label>
            <input asp-for="Amount" class="input-field" />
            <span asp-validation-for="Amount"></span>
        </div>

        @{
            if (Model.CurrentUser.IsBlocked == true || Model.CurrentUser.AdminVerified == false)
            {
                <p class="blocked-message">You are blocked or not verified by admin and you are not allowed to send money to other users.</p>
            }
            else
            {
                <button type="submit" class="btn-submit">SEND</button>
            }
        }

        @if (ViewData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@ViewData["ErrorMessage"]</div>
        }
    </form>
    <br>
    <br>
</div>
