@model UserViewModel


<link href="~/css/responsive.css?v=1.0" rel="stylesheet" />

<link href="~/css/style.css?v=2.0" rel="stylesheet" />

<br>
<br>

<div class="container">
    <form asp-action="EditUser" method="post" enctype="multipart/form-data">
        <div style="text-align: center;" class="form-title">
            <h2 style="padding-left: 20px; color:black;">Edit User</h2>
            <hr>
        </div>
        <div class="input-box">
            <label asp-for="UploadImage" style="color:black;">Upload image:</label>
            <input asp-for="UploadImage" type="file" placeholder="Image">
            <span asp-validation-for="UploadImage" class="text-danger"></span>
        </div>
        <br>
        <div class="input-box">
            <label asp-for="Username" style="font-size: 20px;" class="form-label"></label>
            <input asp-for="Username" style="color:black;" class="input-field" readonly />
            <span asp-validation-for="Username"></span>
        </div>

        <div class="input-box">
            <label asp-for="Email" style="font-size: 20px;" class="form-label"></label>
            <input asp-for="Email" style="color:black;" class="input-field" />
            <span asp-validation-for="Email"></span>
        </div>

        <div class="input-box">
            <label asp-for="PhoneNumber" style="font-size: 20px;" class="form-label"></label>
            <input asp-for="PhoneNumber" class="input-field" />
            <span asp-validation-for="PhoneNumber"></span>
        </div>
        

        <button type="submit" style="font-size: 20px; color:black;" class="input-submit">Save</button>
    </form>
</div>
