<h2 style="text-align:center;">Verification applies:</h2>
<br>
<br>
<!-- Wrapper for the user details and search forms -->
<div class="user-container-wrapper">
    <!-- User details container -->
    <div class="user-container">
        @{
            foreach (var apply in Model)
            {
                <h1 style="text-align:center;">User Details</h1>
                <hr>

                <div style="text-align:center;" class="user-info">
                    <p style="font-size: 20px;">
                        <strong>Username:</strong> <span id="user-username">@apply.User.Username</span>
                    </p>
                </div>

                <!-- Images container -->
                <div class="images-container" style="display: flex; gap: 20px; align-items: center; margin-left: 170px;">
                    <!-- User selfie -->
                        <div class="input-box">
                            <p style="text-align: center; font-size: 20px;"><strong>User selfie:</strong></p>
                            <img src="@apply.Selfie" alt="User Selfie" style="width: 300px; height: 300px; object-fit: cover; border: 2px solid #ddd; border-radius: 5px;" />
                        </div>
                        <!-- User IdPhoto -->
                        <div class="input-box">
                            <p style="text-align: center; font-size: 20px;"><strong>User IdPhoto:</strong></p>
                            <img src="@apply.IdPhoto" alt="User ID Photo" style="width: 300px; height: 300px; object-fit: cover; border: 2px solid #ddd; border-radius: 5px;" />
                        </div>
                </div>

                <!-- Verification buttons -->
                <form asp-action="VerifyUsers" asp-controller="User" method="post" style="margin-top: 20px; text-align:center;">
                    <button type="submit" name="text" value="Accept,@apply.User.Username" style="margin-right: 10px;" class="input-submit">
                        Accept Verification
                    </button>
                    <button type="submit" name="text" value="Decline,@apply.User.Username" class="input-submit">
                        Decline Verification
                    </button>
                </form>
            }
        }
    </div>
</div>
