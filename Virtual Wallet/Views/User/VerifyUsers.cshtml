@model List<VerificationViewModel>

<link href="~/css/responsive.css?v=1.0" rel="stylesheet" />

<link href="~/css/style.css?v=2.0" rel="stylesheet" />
<link href="~/css/AllUsers.css?v=3.0" rel="stylesheet" />


<style>
    body{
        margin: 0; /* Remove default margin to ensure the image covers the entire page */
        padding: 0; /* Remove default padding */
        background-image: url('../images/modern_tech_background_with_low_poly_design_1905.jpg');
        background-size: cover; /* Ensure the image covers the entire viewport */
        backdrop-filter: blur(2px);
        background-position: center; /* Center the image */
        background-repeat: no-repeat; /* Prevent the image from repeating */
        background-attachment: fixed; /* Keep the image fixed during scrolling (optional) */
    }
</style>

