@model AssignRoleViewModel

@{
    ViewData["Title"] = "Assign Role";
}

@if (ViewData["Message"] != null)
{
    <div class="alert alert-success">@ViewData["Message"]</div>
}

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@ViewData["ErrorMessage"]</div>
}


<div class="container">
    <form asp-action="AssignRole" method="post">
        <div style="color:black;" class="form-title">
            <h2>@ViewData["Title"]</h2>
            <hr>
        </div>

        <div class="form-inputs">
            <div class="form-group">
                <div class="input-box">
                    <label asp-for="Username" style="font-size: 30px;" class="control-label"></label>
                    <input asp-for="Username" style="color:black;" class="input-field" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="input-box">
                    <label asp-for="Role" style="font-size: 30px; class="control-label"></label>
                    <input asp-for="Role" class="input-field" />
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="input-box">
                    <label asp-for="PhoneNumber" style="font-size: 30px; class="control-label"></label>
                    <input asp-for="PhoneNumber" class="input-field" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="btn-box">
                <button type="submit" style="font-size: 20px;" class="input-submit">Assign Role</button>
            </div>
            <a asp-controller="Posts" asp-action="Index" style="font-size: 20px" class="nav">Back</a>
        </div>
    </form>
</div>