@model UserViewModel

<div class="container">
    <div class="form-title">
        <h1>User Details</h1>
        <hr>
    </div>

    <div class="form-inputs">

        <div class="input-box">
            <p style="text-align: left; font-size: 20px;"><strong>Profile photo:</strong></p>
            <img src="@Model.Image" alt="User Image" style="width: 300px; height: 300px; " />
        </div>
        <div class="input-box">
            <p style="text-align: left; font-size: 20px;"><strong>Username:</strong> <span id="user-username">@Model.Username</span></p>
        </div>
        <br>
        <div class="input-box">
            <p style="text-align: left; font-size: 20px;"><strong>Email:</strong> <span id="user-lastname">@Model.Email</span></p>
        </div>
        <br>
        <div class="input-box">
            <p style="text-align: left; font-size: 20px;"><strong>Phone Number:</strong> <span id="user-phonenumber">@Model.PhoneNumber</span></p>
        </div>
        <br>
        <div class="input-box">
            <p style="text-align: left; font-size: 20px;"><strong>Role:</strong> <span id="user-phonenumber">@Model.Role</span></p>
        </div>
        <div class="input-box">
            <p style="text-align: left; font-size: 20px;"><strong>IsBlocked:</strong> <span id="user-phonenumber">@Model.IsBlocked</span></p>
        </div>
        <div class="input-box">
            <p style="text-align: left; font-size: 20px;"><strong>CardsCount:</strong> <span id="user-phonenumber">@Model.Cards.Count()</span></p>
        </div>

        <div style="display: flex;" class="input-box">
            <button style="width: 80px; height: 50px; margin-left: 20px;" class="input-submit">
                <a style="text-decoration: none; font-size: 20px; color: black;" asp-controller="User" asp-action="Edit" asp-route-username="@Model.Username">Edit</a>
            </button>
        </div>

        @if (@Model.IsBlocked == false)
        {
            <div style="display: flex;" class="input-box">
                <button style="width: 80px; height: 50px; margin-left: 20px;" class="input-submit">
                    <a style="text-decoration: none; font-size: 20px; color: black;" asp-controller="User" asp-action="BlockUser" asp-route-username="@Model.Username">Block</a>
                </button>
            </div>
        }
        else
        {
            <div style="display: flex;" class="input-box">
                <button style="width: 80px; height: 50px; margin-left: 20px;" class="input-submit">
                    <a style="text-decoration: none; font-size: 20px; color: black;" asp-controller="User" asp-action="UnblockUser" asp-route-username="@Model.Username">Unblock</a>
                </button>
            </div>
        }
    </div>
</div>