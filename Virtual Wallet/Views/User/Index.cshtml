@model Virtual_Wallet.DTOs.UserDTOs.CombinedUserDTO

@{
    Layout = "_Layout";
}

<head>

    <style>
        input[type="file"]::file-selector-button {
            background-color: #49754d;
            color: white;
            font-size: 10px;
            padding: 5px 5px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
    </style>

</head>

<body>
    <div class="form-container">
        <div class="col col-1">
            <p class="featured-words">Register now </p>
        </div>
        <div class="col col-2">
            <div class="btn-box">
                <button class="btn btn-1" id="login">Sign In</button>
                <button class="btn btn-2" id="register">Sign Up</button>
            </div>

            <!-- Login Form Container-->
            <form asp-action="Login" method="post">
                <div class="login-form">
                    <div class="form-title">
                        <span>Sign In</span>
                    </div>
                    <div class="form-inputs">
                        <div class="input-box">
                            <input asp-for="Login.Username" type="text" class="input-field" placeholder="Username" required>
                            <span asp-validation-for="Login.Username" class="text-danger"></span>
                            <i class="bx bx-user icon"></i>
                        </div>
                        <div class="input-box">
                            <input asp-for="Login.Password" type="password" class="input-field" placeholder="Password" required>
                            <span asp-validation-for="Login.Password" class="text-danger"></span>
                            <i class="bx bx-lock-alt icon"></i>
                        </div>
                        <div class="input-box">
                            <button type="submit" class="input-submit">
                                <span>Sign In</span>
                                <i class="bx bx-right-arrow-alt"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </form>

            <!-- Register Form Container-->
            <form asp-action="Register" method="post" enctype="multipart/form-data">
                <div class="register-form">
                    <div class="form-title">
                        <span>Create account</span>
                    </div>

                    <div class="form-inputs">
                        <div class="input-box">
                            <input asp-for="Register.Username" type="text" style="height: 50px;" class="input-field" placeholder="Username" required>
                            <span asp-validation-for="Register.Username" class="text-danger"></span>
                            <i class="bx bx-user icon"></i>
                        </div>
                        <div class="input-box">
                            <input asp-for="Register.Email" type="text" style="height: 50px;" class="input-field" placeholder="Email" required>
                            <span asp-validation-for="Register.Email" class="text-danger"></span>
                            <i class="bx bx-user icon"></i>
                        </div>
                        <div class="input-box">
                            <input asp-for="Register.PhoneNumber" type="text" style="height: 50px;" class="input-field" placeholder="PhoneNumber" required>
                            <span asp-validation-for="Register.PhoneNumber" class="text-danger"></span>
                            <i class="bx bx-user icon"></i>
                        </div>
                        <div class="input-box">
                            <input asp-for="Register.Password" type="password" style="height: 50px;" class="input-field" placeholder="Password" required>
                            <span asp-validation-for="Register.Password" class="text-danger"></span>
                            <i class="bx bx-lock-alt icon"></i>
                        </div>
                        <div class="input-box">
                            <button type="submit" style="height: 40px;" class="input-submit">
                                <span>Sign Up</span>
                                <i class="bx bx-right-arrow-alt"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script src="~/js/login.js?v=1.0"></script>
</body>