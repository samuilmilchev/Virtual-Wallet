@model TransferRequest

@{
    ViewData["Title"] = "Transfer Funds";
}

<h2>Transfer Funds</h2>

<form asp-controller="Transfer" asp-action="TransferFunds" method="post">
    <div class="form-group">
        <label asp-for="Amount">Amount</label>
        <input asp-for="Amount" class="form-control" />
    </div>

    <div class="form-group">
        <label for="transferType">Transfer Type</label>
        <select id="transferType" name="transferType" class="form-control">
            <option value="toWallet">To Wallet</option>
            <option value="toCard">To Card</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Transfer</button>
</form>

