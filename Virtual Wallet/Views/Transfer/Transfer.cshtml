<div class="form-container">
    <form id="transferForm">
        <div class="form-title">
            <h2>Transfer Funds</h2>
            <hr>
        </div>

        <div class="form-group">
            <div class="form-group">
                <label for="transferType" style="font-size:20px;">Transfer Type</label>
                <select id="transferType" class="form-control">
                    <option value="toWallet">To Wallet</option>
                    <option value="toCard">To Card</option>
                </select>
            </div>
            <p>*TO WALLET: money will be transfered to your main BGN wallet</p>
        </div>

        <div class="form-group">
            <div class="form-group">
                <label for="amount" style="font-size:20px;">Amount</label>
                <input type="number" id="amount" class="form-control" min="0.01" step="0.01" required />
            </div>
        </div>
        <br>

        <button type="submit" class="btn-submit" onclick="submitTransfer()">Transfer</button>
    </form>
    <br>
    <br>
</div>
